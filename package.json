{
  "name": "MyWeb",
  "version": "4.0.4",
  "license": "MIT",
  "scripts": {
    "start:tsc": "tsc -b -w --preserveWatchOutput",
    "start": "node ./scripts/preStartScript.js development && concurrently \"yarn start:tsc\" \"razzle start\"",
    "start:staging": "node ./scripts/preStartScript.js staging && concurrently \"yarn start:tsc\" \"razzle start\"",
    "start:production": "node ./scripts/preStartScript.js production && concurrently \"yarn start:tsc\" \"razzle start\"",
    "start:spa": "node ./scripts/preStartScript.js development --spa && concurrently \"yarn start:tsc\" \"razzle start --spa\"",
    "start:spa:staging": "node ./scripts/preStartScript.js staging --spa && concurrently \"yarn start:tsc\" \"razzle start --spa\"",
    "start:spa:production": "node ./scripts/preStartScript.js production --spa && concurrently \"yarn start:tsc\" \"razzle start --spa\"",
    "build": "tsc -b && razzle build",
    "build:spa": "node ./scripts/preStartScript.js --spa && tsc -b && razzle build",
    "clean": "rm -rf ./build",
    "test": "razzle test --env=jsdom",
    "start:build": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@formatjs/intl-datetimeformat": "^3.3.4",
    "@formatjs/intl-numberformat": "^6.2.9",
    "accept-language": "^3.0.18",
    "bootstrap": "^4.6.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "jalali-moment": "^3.3.10",
    "js-cookie": "^2.2.1",
    "lodash.identity": "^3.0.0",
    "lodash.map": "^4.6.0",
    "lodash.trim": "^4.5.1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.5.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-intl": "^5.17.4",
    "react-responsive": "^8.2.0",
    "react-router-dom": "^5.1.2",
    "react-toggle-dark-mode": "^1.0.4",
    "serialize-javascript": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/user-event": "^10.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^13.13.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-helmet": "^6.1.1",
    "@types/react-responsive": "^8.0.2",
    "@types/react-router-dom": "^5.1.4",
    "@types/webpack-env": "^1.15.2",
    "babel-preset-razzle": "4.0.6",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^4.5.2",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss": "^8.3.6",
    "postcss-normalize": "^10.0.0",
    "razzle": "4.0.6",
    "razzle-dev-utils": "4.0.6",
    "razzle-plugin-scss": "^4.0.4",
    "typescript": "^4.3.5",
    "webpack": "^4.44.1",
    "webpack-dev-server": "^3.11.2"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}
